{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "*": ["types/*"],
      "@app/*": ["src/app/*"],
      "@app/services": ["src/services"],
      "@app/charts": ["src/app/modules/charts/"],
      "@app/pages": ["src/app/sections/pages"],
      "@app/maps": ["src/app/modules/maps/"],
      "@app/sounds": ["src/app/modules/sounds/"],
      "@app/window": ["src/app/modules/window/"],
      "@app/material": ["src/app/modules/material/"],
      "@app/shared": ["src/app/modules/shared/"],
     },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
